@page "/"
@inject D2Wrapper D2Wrapper
@rendermode InteractiveServer

<PageTitle>ArchDiagram - Create and Manage Enterprise Architecture Diagrams</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Create and Manage Enterprise Architecture Diagrams</h1>
            <p class="lead">Easily create, edit, and share enterprise architecture diagrams using D2 language.</p>
            <a href="/diagrams/create" class="btn btn-primary btn-lg">Create Diagram</a>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="svg-container">
                        @((MarkupString)SampleDiagramSvg)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Intuitive Editor</h5>
                    <p class="card-text">Create diagrams using a user-friendly editor with syntax highlighting and auto-completion.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Real-time Preview</h5>
                    <p class="card-text">See your diagram rendered in real-time as you make changes to the script.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Collaboration</h5>
                    <p class="card-text">Share diagrams with your team and collaborate in real-time.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .svg-container {
        width: 100%;
        padding-top: 100%;
        position: relative;
    }

    .svg-container svg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>

@code {
private string SampleDiagramSvg { get; set; } = "";

protected override void OnInitialized()
{
string sampleDiagramScript = @"
            direction: right
            A -> B -> C
        ";

SampleDiagramSvg = D2Wrapper.RenderDiagram(sampleDiagramScript) ?? "";
}
}
