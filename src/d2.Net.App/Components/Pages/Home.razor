@page "/"
@inject D2Wrapper D2Wrapper
@rendermode InteractiveServer

<PageTitle>D2 Diagram</PageTitle>

<h1>D2 Diagram</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div>
                <textarea @bind="DiagramScript" rows="10" class="form-control"></textarea>
            </div>
            <div class="mt-3">
                <button @onclick="RenderDiagram" class="btn btn-primary">Render Diagram</button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="svg-container">
                @((MarkupString)RenderedSvg)
            </div>
        </div>
    </div>
</div>

<style>
    .svg-container {
        width: 100%;
        padding-top: 100%;
        position: relative;
    }

    .svg-container svg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>

@code {
    private string DiagramScript { get; set; } = "";
    private string RenderedSvg { get; set; } = "";

    private void RenderDiagram()
    {
        RenderedSvg = D2Wrapper.RenderDiagram(DiagramScript) ?? "";
    }
}
